<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.balanza.android.harrypotter"
    >

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".app.base.BaseApp"
      android:allowBackup="true"
      android:icon="@mipmap/map_icon"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".ui.characterlist.view.CharacterListActivity"
        android:theme="@style/ListViewTheme"
        android:screenOrientation="portrait"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".ui.characterdetail.view.CharacterDetailActivity"
        android:screenOrientation="portrait"
        />
  </application>

</manifest>